void usermenu()
{
	system("mode con cols=50 lines=30");

	textcolor(11);

	printf("▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤\n");
	printf("\n");
	printf("\n");
	printf("            원하는 층을 선택해 주세요           \n");
	printf("\n");
	printf("\n");
	printf("                   □□□□□                \n");
	printf("                   ■  5   ■                \n");
	printf("                   □□□□□                \n");
	printf("                   ■  4   ■                \n");
	printf("                   □□□□□                \n");
	printf("                   ■  3   ■                \n");
	printf("                   □□□□□                \n");
	printf("                   ■  2   ■                \n");
	printf("                   □□□□□                \n");
	printf("                   ■  1   ■                \n");
	printf("                   □□□□□                \n");
	printf("                   ■  B1  ■                \n");
	printf("                   □□□□□                \n");
	printf("\n");
	printf("\n");
	printf(" KNU                                              \n");
	printf("▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤\n");
	printf("                                                  \n");
	printf("                                       <<back>>   \n");

	while (1) {

		mouse();

		if (mousescope(19, 27, 17, 17)) { // B1층
			pushmenu(usernum);
			menux = usernum1;

			return;
		}

		if (mousescope(19, 27, 15, 15)) { // 1층
			pushmenu(usernum);
			menux = usernum2;

			return;
		}

		if (mousescope(19, 27, 13, 13)) { // 2층
			pushmenu(usernum);
			menux = usernum3;

			return;

		}

		if (mousescope(19, 27, 11, 11)) { // 3층
			pushmenu(usernum);
			menux = usernum4;

			return;

		}
		if (mousescope(19, 27, 9, 9)) { // 4층
			pushmenu(usernum);
			menux = usernum5;

			return;

		}
		if (mousescope(19, 27, 7, 7)) { // 5층
			pushmenu(usernum);
			menux = usernum6;
			
			return;

		}
		if (mousescope(39, 46, 24, 24)) { // back
			menux = popmenu();

			return;

		}
	}


}


//메인 함수 선언
int main(void)
{
	while (1) {
		system("cls");
		switch (menux) {
		case 0: title();
			break;
		case 1: manager();
			break;
		case 2: manager_1();
			break;
		case 3: manager_2();
			break;
		case 4: manager_1_1();
			break;
		case 5: manager_1_2();
			break;
		case 6: manager_1_3();
			break;
		case 7: usermenu();
			break;
		case 8: user_1(); //B1층
			break;
		case 9: user_2();
			break;
		case 10: user_3();
			break;
		case 11: user_4();
			break;
		case 12: user_5();
			break;
		case 13: user_6(); //6층
			break;
		case 14: user_1_1(); //강의실 내부
		}
	}
}

void title()
{
	menux = mainnum;
	login();
}

void textcolor(int color_number)

{

	SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), color_number);

} //텍스트 색 설정
void login() {
	char yn;
	member();
	stuInfo temp;
	while (TRUE) {
		mainmenu();
		CursorView(1);
		gotoxy(26, 11);
		scanf("%d", &temp.id);
		gotoxy(26, 12);
		scanf("%d", &temp.key);
		for (i = 0; i < peoplenum; i++) {
			if (stuEqual(&temp, &stu[i])) {
				pushmenu(menux); // 현재 메뉴 저장
				gotoxy(20, 13);
				printf("사용자 정보 : %s", stu[i].name);
				gotoxy(26, 14);
				printf("(y/n) : ");
				scanf("%*c");
				scanf("%c", &yn);
				gotoxy(30, 14);
				if (yn == 'n')
					return;
				if (temp.key == 1234) //관리자 키 or 사용자 키
					menux = managernum;
				else
					menux = usernum;
				return;
			}
		}
	}
}
void mainmenu() {

	CursorView(0);
	textcolor(11);
	system("mode con cols=50 lines=27"); //cols = 칸/행 (가로)  lines = 줄/열 (세로)
	printf("▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤\n");
	printf("\n");

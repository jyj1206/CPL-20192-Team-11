	printf("▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤\n");
	printf("                                                  \n");
	printf("                                       <<back>>   \n");

	while (1) {

		mouse();

		if (mousescope(17, 33, 9, 11)) { // 학생 정보 관리 메뉴

			pushmenu(managernum);
			menux = managernum1_1;

			return;

		}

		if (mousescope(17, 33, 14, 16)) { // 시간표 정보 관리 메뉴

			pushmenu(managernum);
			menux = managernum1_2;

			return;

		}


	printf(" \n                                                                       <<back>>   \n");

	while (1) {

		mouse();
		
		if (mousescope(8, 17, 6, 10)) { //B101
			pushmenu(usernum1);
			num = -101;
			menux = usernum1_1;
			
			return;
		}

		if (mousescope(20, 28, 6, 10)) { //B102
			pushmenu(usernum1);
			num = -102;
			menux = usernum1_1;

			return;
		}

		if (mousescope(71, 78, 16, 16)) { //back

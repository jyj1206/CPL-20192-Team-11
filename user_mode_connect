	printf("         □  빈 강의실 예약 프로그램  □          \n");
	printf("         ■                           ■          \n");
	printf("         □          IT5호관          □          \n");
	printf("         ■                           ■          \n");
	printf("\n");
	printf("\n");
	printf("\n");
	printf("                  학번 : l           l	 \n");
	printf("                  key :  l           l    \n");
	printf("\n");
	printf("\n");
	printf("\n");
	printf("\n");
	printf("                                                  \n");
	printf(" KNU                                              \n");
	printf("▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤\n");

	timeset();
}

void manager() {
	
	CursorView(0);
		
	system("mode con cols=50 lines=27");

	textcolor(11);
	printf("▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤\n");
	printf("                                                  \n");
	printf("                                                  \n");
	printf("                  - 관리자 모드 -                 \n");
	printf("                                                  \n");
	printf("                                                  \n");
	printf("           원하시는 작업을 선택해 주세요          \n");
	printf("                                                  \n");
	printf("                                                  \n");
	printf("                 =================                \n");
	printf("                   학생 정보 관리                 \n");
	printf("                 =================                \n");
	printf("                                                  \n");
	printf("                                                  \n");
	printf("                 =================                \n");
	printf("                    시간표 관리                   \n");
	printf("                 =================                \n");
	printf("                                                  \n");
	printf("                                                  \n");
	printf("                                                  \n");
	printf(" KNU                                              \n");
	printf("▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤\n");
	printf("                                                  \n");
	printf("                                    <<back>>      \n");

	
	while (1) {

		mouse();

		if (mousescope(17, 33, 9, 11)) { // 학생 정보 관리 메뉴
			pushmenu(managernum);
			menux = managernum1;

			return;
		}

		if (mousescope(17, 33, 14, 16)) { // 시간표 정보 관리 메뉴
			pushmenu(managernum);
			menux = managernum2;

			return;
		}

		if (mousescope(17, 33, 14, 16)) { // 뒤로가기
			menux = popmenu();

			return;
		}



	}



}

int mousescope(int x1, int x2, int y1, int y2)

{

	if (x >= x1 && x <= x2) {

		if (y >= y1 && y <= y2) {

			return TRUE;

		}

	}

    return NULL;

}

void manager_1()
{
	system("mode con cols=50 lines=35");

	textcolor(11);

	printf("▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤▤\n");
	printf("                                                  \n");
	printf("                                                  \n");
	printf("                  - 학생정보 관리 -               \n");
	printf("                                                  \n");
	printf("                                                  \n");
	printf("           원하시는 작업을 선택해 주세요          \n");
	printf("                                                  \n");
	printf("                                                  \n");
	printf("                 =================                \n");
	printf("                     학생 조회                    \n");
	printf("                 =================                \n");
	printf("                                                  \n");
	printf("                                                  \n");
	printf("                 =================                \n");
	printf("                     학생 추가                    \n");
	printf("                 =================                \n");
	printf("                                                  \n");
	printf("                                                  \n");
	printf("                 =================                \n");
	printf("                     학생 제거                    \n");
	printf("                 =================                \n");
	printf("                                                  \n");
	printf("                                                  \n");
	printf("                                                  \n");

	printf("                                                                                    \n");
	printf("                                                                                    \n");
	printf("        ■■■■■■■■■■■                                                      \n");
	printf("        ■        ■        ■                                                      \n");
	printf("        ■  B101  ■  B102  ■                                                      \n");
	printf("        ■        ■        ■                                                      \n");
	printf("        ■■■■■■■■■■■                                                      \n");
	printf("                                                                                    \n");
	printf("                                                                                    \n");
	printf(" KNU                                                                                \n");
